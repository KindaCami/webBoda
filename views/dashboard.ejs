        .subtitle { font-size: 0.9rem; color: rgba(255,255,255,0.4); font-weight: 300; margin-bottom: 20px; }
        .vip-tag { display: inline-flex; align-items: center; gap: 6px; font-family: 'Orbitron', monospace; font-size: 0.58rem; font-weight: 700; letter-spacing: 0.18em; text-transform: uppercase; color: #ffd700; background: rgba(255,215,0,0.07); border: 1px solid rgba(255,215,0,0.2); border-left: 3px solid #ffd700; padding: 6px 12px; border-radius: 3px; margin-bottom: 24px; }
        .flash-success { display: flex; align-items: center; gap: 10px; background: rgba(0,255,136,0.07); border: 1px solid rgba(0,255,136,0.2); border-left: 3px solid #00ff88; border-radius: 3px; padding: 12px 16px; margin-bottom: 24px; font-size: 0.85rem; color: #00ff88; }
        .divider { height: 1px; background: rgba(255,255,255,0.05); margin: 28px 0; }
        .section-label { font-family: 'Orbitron', monospace; font-size: 0.58rem; letter-spacing: 0.22em; color: rgba(255,255,255,0.3); text-transform: uppercase; margin-bottom: 14px; display: flex; align-items: center; gap: 10px; }
        .section-label::after { content: ''; flex: 1; height: 1px; background: rgba(255,255,255,0.06); }

        /* EMAIL GRUPO */
        .email-group-box { background: rgba(0,136,255,0.04); border: 1px solid rgba(0,136,255,0.12); border-radius: 4px; padding: 16px 20px; margin-bottom: 24px; }
        .email-group-tag { font-family: 'Orbitron', monospace; font-size: 0.55rem; letter-spacing: 0.2em; color: rgba(0,136,255,0.7); text-transform: uppercase; margin-bottom: 8px; }
        .email-hint { font-size: 0.75rem; color: rgba(255,255,255,0.22); margin-top: 6px; line-height: 1.4; }

        /* INPUTS */
        input[type="email"], input[type="text"], textarea, select {
            width: 100%; background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.09);
            border-radius: 3px; padding: 11px 14px; color: #fff;
            font-family: 'Inter', sans-serif; font-size: 0.88rem; outline: none;
            transition: border-color 0.2s, box-shadow 0.2s; appearance: none;
        }
        input:focus, textarea:focus, select:focus { border-color: rgba(0,255,136,0.4); box-shadow: 0 0 0 3px rgba(0,255,136,0.06); }
        input::placeholder, textarea::placeholder { color: rgba(255,255,255,0.2); }
        textarea { resize: vertical; min-height: 70px; line-height: 1.5; }
        .select-wrapper { position: relative; }
        .select-wrapper::after { content: '‚ñæ'; position: absolute; right: 14px; top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.3); pointer-events: none; }
        select { cursor: pointer; }
        select option { background: #0d0d1a; }
        .field-label { font-family: 'Orbitron', monospace; font-size: 0.55rem; letter-spacing: 0.18em; color: rgba(255,255,255,0.3); text-transform: uppercase; margin-bottom: 6px; display: block; }

        /* GUEST CARDS */
        .guest-list { display: flex; flex-direction: column; gap: 20px; }
        .guest-card { background: rgba(255,255,255,0.025); border: 1px solid rgba(255,255,255,0.06); border-radius: 4px; overflow: hidden; }
        .guest-header { padding: 14px 20px; border-bottom: 1px solid rgba(255,255,255,0.05); display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 8px; }
        .guest-name { font-family: 'Orbitron', monospace; font-size: 0.78rem; font-weight: 700; letter-spacing: 0.08em; }
        .guest-body { padding: 20px; display: flex; flex-direction: column; gap: 20px; }

        .acc-status { display: inline-flex; align-items: center; gap: 5px; font-family: 'Orbitron', monospace; font-size: 0.5rem; letter-spacing: 0.12em; padding: 3px 8px; border-radius: 2px; }
        .acc-confirmed { background: rgba(0,255,136,0.1); color: #00ff88; border: 1px solid rgba(0,255,136,0.2); }
        .acc-waiting   { background: rgba(255,165,0,0.1); color: #ffa500; border: 1px solid rgba(255,165,0,0.2); }
        .acc-none      { background: rgba(255,255,255,0.04); color: rgba(255,255,255,0.25); border: 1px solid rgba(255,255,255,0.07); }

        /* CHECKBOXES */
        .eventos-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; }
        .evento-item { background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.06); border-radius: 3px; padding: 12px 14px; display: flex; align-items: flex-start; gap: 10px; cursor: pointer; transition: border-color 0.2s, background 0.2s; }
        .evento-item:hover { background: rgba(255,255,255,0.05); }
        .evento-item.checked { border-color: rgba(0,255,136,0.35); background: rgba(0,255,136,0.04); }
        .evento-item input[type="checkbox"] { display: none; }
        .check-box { width: 16px; height: 16px; flex-shrink: 0; margin-top: 2px; border: 1px solid rgba(255,255,255,0.2); border-radius: 3px; background: rgba(255,255,255,0.04); display: flex; align-items: center; justify-content: center; font-size: 0.65rem; font-weight: 900; transition: all 0.15s; }
        .evento-item.checked .check-box { background: #00ff88; border-color: #00ff88; color: #000; }
        .evento-nombre { font-size: 0.8rem; color: rgba(255,255,255,0.85); line-height: 1.3; margin-bottom: 3px; }
        .evento-fecha { font-family: 'Orbitron', monospace; font-size: 0.52rem; letter-spacing: 0.1em; color: rgba(255,255,255,0.3); }

        .noches-grid { display: flex; gap: 8px; flex-wrap: wrap; }
        .noche-item { display: flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.06); border-radius: 3px; padding: 10px 14px; cursor: pointer; flex: 1; min-width: 130px; transition: border-color 0.2s, background 0.2s; }
        .noche-item:hover { background: rgba(255,255,255,0.05); }
        .noche-item.checked { border-color: rgba(0,136,255,0.4); background: rgba(0,136,255,0.05); }
        .noche-item input[type="checkbox"] { display: none; }
        .noche-check { width: 14px; height: 14px; flex-shrink: 0; border: 1px solid rgba(255,255,255,0.2); border-radius: 3px; background: rgba(255,255,255,0.04); display: flex; align-items: center; justify-content: center; font-size: 0.6rem; font-weight: 900; transition: all 0.15s; }
        .noche-item.checked .noche-check { background: #0088ff; border-color: #0088ff; color: #fff; }
        .noche-nombre { font-size: 0.78rem; color: rgba(255,255,255,0.8); }
        .noche-fecha { font-family: 'Orbitron', monospace; font-size: 0.5rem; color: rgba(255,255,255,0.3); letter-spacing: 0.1em; margin-top: 2px; }

        .two-col { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }

        .btn-save { width: 100%; margin-top: 28px; padding: 15px 24px; background: #00ff88; color: #000; font-family: 'Orbitron', monospace; font-size: 0.78rem; font-weight: 700; letter-spacing: 0.2em; text-transform: uppercase; border: none; border-radius: 3px; cursor: pointer; transition: background 0.2s, box-shadow 0.2s, transform 0.1s; box-shadow: 0 0 20px rgba(0,255,136,0.2); }
        .btn-save:hover { background: #33ffaa; box-shadow: 0 0 30px rgba(0,255,136,0.4); }
        .btn-save:active { transform: scale(0.99); }

        .card-footer {
    padding: 20px 40px;
    border-top: 1px solid rgba(255,255,255,0.05);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    flex-wrap: wrap;
    }
        .footer-hint {
    font-size: 0.75rem;
    color: rgba(255,255,255,0.2);
    font-style: italic;
    }
    .footer-hint strong { color: rgba(0,255,136,0.5); font-style: normal; }
    .footer-hint a {
    color: rgba(0,255,136,0.5);
    text-decoration: none;
    cursor: pointer;
    }
    .footer-hint a:hover { color: #00ff88; }
    .btn-logout {
    font-family: 'Orbitron', monospace;
    font-size: 0.65rem; font-weight: 700;
    letter-spacing: 0.18em; text-transform: uppercase;
    color: #000;
    background: rgba(255,60,60,0.85);
    padding: 10px 20px; border-radius: 3px;
    text-decoration: none;
    border: none;
    transition: background 0.2s, box-shadow 0.2s;
    box-shadow: 0 0 16px rgba(255,60,60,0.25);
    }
    .btn-logout:hover {
    background: #ff4444;
    box-shadow: 0 0 24px rgba(255,60,60,0.45);
    }

        @media (max-width: 620px) {
            .eventos-grid, .two-col { grid-template-columns: 1fr; }
            .noches-grid { flex-direction: column; }
            .card-body { padding: 24px; }
            .card-footer { padding: 14px 24px; flex-direction: column; gap: 10px; }
        }

        /* ‚îÄ‚îÄ BOT FLOTANTE ‚îÄ‚îÄ */
   #bot-toggle {
        position: fixed; top: 24px; left: 24px; z-index: 1000;
        width: 64px; height: 64px; border-radius: 50%;
        background: linear-gradient(135deg, #00ff88, #0088ff);
        border: none; cursor: pointer;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.6rem;
        box-shadow: 0 4px 32px rgba(0,255,136,0.5), 0 0 0 4px rgba(0,255,136,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        animation: botPulseRing 2.5s infinite;
        overflow: hidden;
        padding: 0;
    }
    @keyframes botPulseRing {
        0%   { box-shadow: 0 4px 32px rgba(0,255,136,0.5), 0 0 0 0px rgba(0,255,136,0.3); }
        70%  { box-shadow: 0 4px 32px rgba(0,255,136,0.5), 0 0 0 14px rgba(0,255,136,0); }
        100% { box-shadow: 0 4px 32px rgba(0,255,136,0.5), 0 0 0 0px rgba(0,255,136,0); }
    }
    #bot-toggle:hover { transform: scale(1.1); }
    #bot-toggle .bot-badge {
        position: absolute; top: 0px; right: 0px;
        width: 18px; height: 18px; border-radius: 50%;
        background: #ff00cc; border: 2px solid #000;
        animation: pulse 2s infinite;
    }

    /* ‚îÄ‚îÄ BURBUJA DE MENSAJE PREVIO ‚îÄ‚îÄ */
    #bot-preview {
        position: fixed; top: 100px; left: 24px; z-index: 999;
        max-width: 260px;
        background: rgba(8,8,20,0.97); backdrop-filter: blur(20px);
        border: 1px solid rgba(0,255,136,0.2);
        border-radius: 12px; border-bottom-right-radius: 3px;
        padding: 14px 16px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.6), 0 0 0 1px rgba(0,255,136,0.08);
        opacity: 0; transform: translateY(8px) scale(0.95);
        transition: opacity 0.4s ease, transform 0.4s ease;
        pointer-events: none;
    }
    #bot-preview.visible { opacity: 1; transform: translateY(0) scale(1); pointer-events: auto; }
    #bot-preview.hidden  { opacity: 0; transform: translateY(8px) scale(0.95); pointer-events: none; }
    .preview-text {
        font-size: 0.82rem; color: rgba(255,255,255,0.85); line-height: 1.5;
        margin-bottom: 10px;
    }
    .preview-text strong { color: #00ff88; }
    .preview-actions { display: flex; gap: 8px; }
    .preview-btn-open {
        flex: 1; background: #00ff88; color: #000;
        font-family: 'Orbitron', monospace; font-size: 0.55rem; font-weight: 700;
        letter-spacing: 0.15em; text-transform: uppercase;
        border: none; border-radius: 4px; padding: 7px 10px;
        cursor: pointer; transition: background 0.2s;
    }
    .preview-btn-open:hover { background: #33ffaa; }
    .preview-btn-close {
        background: rgba(255,255,255,0.05); color: rgba(255,255,255,0.3);
        border: 1px solid rgba(255,255,255,0.08); border-radius: 4px;
        padding: 7px 10px; cursor: pointer; font-size: 0.75rem;
        transition: color 0.2s;
    }
    .preview-btn-close:hover { color: rgba(255,255,255,0.6); }
    /* Flecha de la burbuja */
    #bot-preview::after {
        content: '';
        position: absolute; bottom: -8px; right: auto; left: 20px;
        width: 0; height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-top: none;
        border-bottom: 8px solid rgba(0,255,136,0.2);
    }

    /* ‚îÄ‚îÄ VENTANA DEL BOT ‚îÄ‚îÄ */
    #bot-window {
        position: fixed; top: 100px; left: 24px; z-index: 1000;
        width: 360px; max-height: 500px;
        background: rgba(8,8,20,0.97); backdrop-filter: blur(20px);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 8px; overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.8), 0 0 0 1px rgba(0,255,136,0.08);
        display: none; flex-direction: column;
        opacity: 0; transform: translateY(10px);
        transition: transform 0.25s ease, opacity 0.25s ease;
    }
    #bot-window.open { display: flex; opacity: 1; transform: translateY(0); }

    .bot-header { height: 3px; background: linear-gradient(90deg, #00ff88, #0088ff, #ff00cc); flex-shrink: 0; }
    .bot-titlebar {
        display: flex; align-items: center; justify-content: space-between;
        padding: 14px 16px; border-bottom: 1px solid rgba(255,255,255,0.05); flex-shrink: 0;
    }
    .bot-title { font-family: 'Orbitron', monospace; font-size: 0.62rem; font-weight: 700; letter-spacing: 0.2em; color: #00ff88; display: flex; align-items: center; gap: 8px; }
    .bot-online { width: 6px; height: 6px; border-radius: 50%; background: #00ff88; box-shadow: 0 0 6px #00ff88; animation: pulse 2s infinite; }
    .bot-close { background: none; border: none; color: rgba(255,255,255,0.3); cursor: pointer; font-size: 1rem; padding: 4px; transition: color 0.2s; }
    .bot-close:hover { color: #fff; }

    .bot-messages {
        flex: 1; overflow-y: auto; padding: 16px;
        display: flex; flex-direction: column; gap: 12px;
        scrollbar-width: thin; scrollbar-color: rgba(255,255,255,0.1) transparent;
    }
    .bot-messages::-webkit-scrollbar { width: 4px; }
    .bot-messages::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 2px; }

    .msg { display: flex; flex-direction: column; max-width: 85%; }
    .msg.user { align-self: flex-end; align-items: flex-end; }
    .msg.bot  { align-self: flex-start; }
    .msg-bubble { padding: 10px 14px; border-radius: 12px; font-size: 0.85rem; line-height: 1.5; word-break: break-word; }
    .msg.user .msg-bubble { background: rgba(0,255,136,0.15); border: 1px solid rgba(0,255,136,0.2); color: #fff; border-bottom-right-radius: 3px; }
    .msg.bot  .msg-bubble { background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.07); color: rgba(255,255,255,0.85); border-bottom-left-radius: 3px; }
    .msg-time { font-size: 0.65rem; color: rgba(255,255,255,0.2); margin-top: 4px; padding: 0 4px; }

    .bot-typing { align-self: flex-start; display: none; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.07); border-radius: 12px; border-bottom-left-radius: 3px; padding: 12px 16px; gap: 4px; align-items: center; }
    .bot-typing.visible { display: flex; }
    .typing-dot { width: 6px; height: 6px; border-radius: 50%; background: rgba(255,255,255,0.4); animation: typingDot 1.2s infinite; }
    .typing-dot:nth-child(2) { animation-delay: 0.2s; }
    .typing-dot:nth-child(3) { animation-delay: 0.4s; }
    @keyframes typingDot { 0%, 60%, 100% { transform: translateY(0); opacity: 0.4; } 30% { transform: translateY(-4px); opacity: 1; } }

    .bot-input-area { padding: 12px 16px; border-top: 1px solid rgba(255,255,255,0.05); display: flex; gap: 8px; flex-shrink: 0; }
    .bot-input { flex: 1; background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.09); border-radius: 6px; padding: 10px 12px; color: #fff; font-family: 'Inter', sans-serif; font-size: 0.85rem; outline: none; resize: none; transition: border-color 0.2s; }
    .bot-input:focus { border-color: rgba(0,255,136,0.4); }
    .bot-input::placeholder { color: rgba(255,255,255,0.2); }
    .bot-send { width: 38px; height: 38px; border-radius: 6px; background: #00ff88; border: none; cursor: pointer; display: flex; align-items: center; justify-content: center; color: #000; font-size: 1rem; flex-shrink: 0; transition: background 0.2s, transform 0.1s; align-self: flex-end; }
    .bot-send:hover { background: #33ffaa; }
    .bot-send:active { transform: scale(0.95); }
    .bot-send:disabled { background: rgba(255,255,255,0.1); color: rgba(255,255,255,0.2); cursor: not-allowed; }

    </style>
