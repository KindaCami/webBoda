        @keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.3; } }

        .card-wrapper { position: relative; width: 100%; max-width: 700px; }
        .corner { position: absolute; width: 12px; height: 12px; border-color: rgba(0,255,136,0.35); border-style: solid; }
