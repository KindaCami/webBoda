    <script>
        // Evitar que el bot√≥n atr√°s vaya al login
        history.pushState(null, null, '/dashboard');
        window.addEventListener('popstate', () => {
        window.location.href = '/';
        });
        function toggleCheck(label) {
            const cb = label.querySelector('input[type="checkbox"]');
            const box = label.querySelector('.check-box');
            setTimeout(() => { label.classList.toggle('checked', cb.checked); box.textContent = cb.checked ? '‚úì' : ''; }, 0);
        }
        function toggleNoche(label) {
            const cb = label.querySelector('input[type="checkbox"]');
            const box = label.querySelector('.noche-check');
            setTimeout(() => { label.classList.toggle('checked', cb.checked); box.textContent = cb.checked ? '‚úì' : ''; }, 0);
        }

    // BOT      
    const botWindow   = document.getElementById('bot-window');
    const botMessages = document.getElementById('bot-messages');
    const botInput    = document.getElementById('bot-input');
    const botSend     = document.getElementById('bot-send');
    const botTyping   = document.getElementById('bot-typing');
    const botPreview  = document.getElementById('bot-preview');

    let chatHistory = [];
    let botOpened   = false;

    // Mostrar burbuja de preview a los 2 segundos de cargar la p√°gina

    setTimeout(() => {
        botPreview.classList.add('visible');
    }, 2000);

    function closePreview() {
        botPreview.classList.remove('visible');
        botPreview.classList.add('hidden');
    }

    function openBotFromPreview() {
        closePreview();
        openBot();
    }

    function openBot() {
        closePreview();
        botWindow.style.display = 'flex';
        requestAnimationFrame(() => botWindow.classList.add('open'));
        botInput.focus();
        if (!botOpened) {
            botOpened = true;
            setTimeout(() => {
                fetchBot([{ role: 'user', content: '¬°Hola!' }], true);
            }, 300);
        }
    }

    function closeBot() {
        botWindow.classList.remove('open');
        setTimeout(() => { botWindow.style.display = 'none'; }, 250);
    }

    document.getElementById('bot-toggle').addEventListener('click', () => {
        botWindow.classList.contains('open') ? closeBot() : openBot();
    });

    function addMsg(role, text) {
        botTyping.classList.remove('visible');
        const now = new Date().toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });
        const div = document.createElement('div');
        div.className = `msg ${role}`;
        div.innerHTML = `
            <div class="msg-bubble">${text.replace(/\n/g, '<br>')}</div>
            <div class="msg-time">${now}</div>
        `;
        botMessages.insertBefore(div, botTyping);
        botMessages.scrollTop = botMessages.scrollHeight;
    }

    async function fetchBot(messages, isGreeting = false) {
        botSend.disabled = true;
        botTyping.classList.add('visible');
        botMessages.scrollTop = botMessages.scrollHeight;
        try {
            const res  = await fetch('/bot/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ messages })
            });
    const data = await res.json();
    if (data.reply) {
        if (!isGreeting) {
        chatHistory.push({ role: 'user', content: messages[messages.length - 1].content });
    }
    chatHistory.push({ role: 'assistant', content: data.reply });
    addMsg('bot', data.reply);
}
        } catch (e) {
            addMsg('bot', 'üòÖ Ups, algo ha fallado. Int√©ntalo de nuevo.');
        } finally {
            botSend.disabled = false;
        }
    }

    async function sendMessage() {
        const text = botInput.value.trim();
        if (!text) return;
        botInput.value = '';
        botInput.style.height = 'auto';
        addMsg('user', text);
        const messages = [...chatHistory, { role: 'user', content: text }];
        await fetchBot(messages);
    }

    function handleKey(e) {
        if (e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); sendMessage(); }
    }

    botInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = Math.min(this.scrollHeight, 100) + 'px';
    });
    </script>

    <script>
        // Continuacion de la musica
    (function() {
        const shouldContinue = localStorage.getItem('audioDashboard');
        const savedTime      = parseFloat(localStorage.getItem('audioTime2') || '38');
        if (!shouldContinue) return;

        localStorage.removeItem('audioDashboard');
        localStorage.removeItem('audioTime2');

        const bgAudio = new Audio('/audio/Aerea.mp3');
        bgAudio.currentTime = isNaN(savedTime) ? 38 : savedTime;
        bgAudio.volume = 0;
        bgAudio.loop = true; // ‚Üê se repite cuando se acaba

        function fadeIn() {
            bgAudio.play().then(() => {
                const target = 0.12;
                const interval = setInterval(() => {
                    if (bgAudio.volume < target - 0.005) {
                        bgAudio.volume = Math.min(target, bgAudio.volume + 0.005);
                    } else {
                        bgAudio.volume = target;
                        clearInterval(interval);
                    }
                }, 80);
            }).catch(() => {});
        }

        bgAudio.play().then(() => { bgAudio.pause(); fadeIn(); })
        .catch(() => {
            document.addEventListener('click',      fadeIn, { once: true });
            document.addEventListener('keydown',    fadeIn, { once: true });
            document.addEventListener('touchstart', fadeIn, { once: true });
        });
    })();
</script>
