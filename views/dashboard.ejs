        .corner-br { bottom: -1px; right: -1px; border-width: 0 2px 2px 0; }

        .card { background: rgba(8,8,20,0.92); backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.07); border-radius: 4px; overflow: hidden; box-shadow: 0 0 0 1px rgba(0,255,136,0.04), 0 30px 80px rgba(0,0,0,0.8); }
